{
  "manifest_version": 2,
  "browser_specific_settings": {
    "gecko": {
      "id": "webmaster@grafics.fr",
      "strict_min_version": "91.0"
    }
  },
  "name": "Image Border Editor",
  "version": "1.0.0",
  "description": "Ajoutez facilement des bordures personnalis√©es aux images dans vos emails",
  "author": "Grafics",
  "permissions": [
    "menus",
    "storage",
    "compose",
    "<all_urls>",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "48": "icon-48.png",
      "96": "icon-96.png"
    },
    "default_title": "Image Border Editor"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png"
  }
}